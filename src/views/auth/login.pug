extends ../layouts/index
append styles
	// Custom styles for this template
	//- link(href='/css/signin.css', rel='stylesheet')
block content
	.container.my-5
		form#form(method="post" novalidate).form-signin
			img.mb-4(src='#' alt='' width='72' height='72')
			h1.h3.mb-3.font-weight-normal Please sign in
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email' placeholder='Email address' name='email' autofocus='example@email.com' value= email ? email : '')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password' placeholder='password' name='password')
			.checkbox.mb-3
				label
					input(type='checkbox' name='miCheckbox' value='remember-me')
					|  Remember me
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
			div
				a(href="/auth/register") Register
			if errors
				p.text-bg-warning.p-3.mt-2=errors.error